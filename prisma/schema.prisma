datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  admin    Boolean  @default(true)
  reports  Report[]
}

model Report {
  id           String  @id @default(uuid())
  price        Int
  make         String
  model        String
  color        String
  transmission String
  fuel_type    String
  year         Int
  mileage      Int
  approved     Boolean @default(false)
  author       User?   @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  authorId     String?
}

